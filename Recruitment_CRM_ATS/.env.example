# ============================================
# Recruitment CRM/ATS - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
PORT=7071

# ============================================
# Frontend Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:7071/api

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ============================================
# AI Services - Ollama (Primary)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ============================================
# AI Services - OpenAI (Fallback)
# ============================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# ============================================
# Azure Services (Placeholders for Production)
# ============================================

# Azure SQL Database
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=recruitment_crm
AZURE_SQL_USER=your-username
AZURE_SQL_PASSWORD=your-password

# Dataverse (Power Platform)
DATAVERSE_URL=https://your-org.crm.dynamics.com
DATAVERSE_CLIENT_ID=your-client-id
DATAVERSE_CLIENT_SECRET=your-client-secret

# Azure Blob Storage (Resume Storage)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER_NAME=resumes

# Application Insights (Monitoring)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# Azure AD B2C (Authentication)
AZURE_TENANT_ID=your-tenant-id
AZURE_B2C_CLIENT_ID=your-b2c-client-id
AZURE_B2C_CLIENT_SECRET=your-b2c-client-secret

# ============================================
# Email Services
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# Calendar Integration
# ============================================

# Office 365 Calendar
OFFICE365_CLIENT_ID=your-office365-client-id
OFFICE365_CLIENT_SECRET=your-office365-client-secret

# Google Calendar (Backup)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:7071/api/auth/google/callback
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# ============================================
# Development Only
# ============================================
DEBUG=false
LOG_LEVEL=info
